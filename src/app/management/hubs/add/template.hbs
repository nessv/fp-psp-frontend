<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <article class="card">

      <div class="card-block">
        <div class="row">
          <div class="col-md-12">
            <div class="card-title">
              <h4>
                {{#if isNew}}
                  {{$t 'hub.form.add-title'}}
                {{else}}
                  {{$t 'hub.form.edit-title'}}
                {{/if}}
                <img class="pull-right" src="/static/images/icon_more.png">
              </h4>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="margin-tb-35px" id="img-cam">
              <img id="image-logo" src="{{logoImage}}" class="card-img-top img-responsive center-block select-file"/>
              <p id="image-logo-text" class="text-center select-file">{{$t 'hub.form.logo-upload'}}</p>
              <div class="form-group">
                <input type="file" name="image" id="input-image-file" value="{{application.image}}"
                       class="form-control" style="display: none">
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <div class="fp-form-container padding-b-30px" id="add-application">
              <form data-toggle="validator" role="form" class="form-vertical" id="form">
                <div class="form-group">
                  <input name="name" type="text" value="{{application.name}}" placeholder="* {{$t 'hub.form.name'}}"
                         class="input-bg-gray form-control" required>
                </div>
                <div class="form-group">
                  <input name="code" type="text" value="{{application.code}}" placeholder="* {{$t 'hub.form.code'}}"
                         class="input-bg-gray form-control" required
                         {{#unless isNew}} readonly {{/unless}}if}}>
                </div>
                <div class="form-group">
                  <input name="description" type="text" value="{{application.description}}"
                         placeholder="* {{$t 'hub.form.description'}}" class="input-bg-gray form-control" required>
                </div>
                <div class="form-group">
                  <input name="information" type="text" value="{{application.information}}"
                         placeholder="{{$t 'hub.form.information'}}" class="input-bg-gray form-control" required>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="margin-tb-35px" id="img-cam">
                      <img id="termcond-file" src="{{formImage}}" class="card-img-top img-responsive center-block select-term-file">
                      <p id="term-text" class="text-center select-term-file">{{$t 'hub.form.terms-upload'}}</p>
                      <input type="file" name="terms" id="input-terms-file" value="{{termCond}}"
                        class="form-control" style="display: none" accept=".html">
                      <img id="pol-file" src="{{formImage}}" class="card-img-top img-responsive center-block select-pol-file">
                      <p id="pol-text" class="text-center select-pol-file">{{$t 'hub.form.pol-upload'}}</p>
                      <input type="file" name="pol" id="input-pol-file" value="{{pol}}"
                        class="form-control" style="display: none" accept=".html">
                    </div>
                  </div>
                </div>


                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-12">
                      <button type="submit" name="register-submit" id="submit" class="btn" value="Save">
                        {{$t 'general.buttons.ok'}}
                      </button>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="text-center">
                    <a href="#management/applications" id="cancel" tabindex="5" class="">
                      {{$t 'general.buttons.cancel'}}
                    </a>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>
